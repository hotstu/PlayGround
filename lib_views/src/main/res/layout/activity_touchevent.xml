<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.slab.customviewplayground.TouchEventTestActivity">


        <com.example.slab.customviewplayground.view.BezierView
            android:id="@+id/bv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#446655"
            android:clickable="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="addlevel"
                    android:text="add"
                    android:backgroundTint="@color/colorAccent"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="dellevel"
                    android:text="del"
                    android:backgroundTint="@color/colorAccent"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="accelerate"
                    android:text="acc"
                    android:backgroundTint="@color/colorAccent"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="decelerate"
                    android:text="dec"
                    android:backgroundTint="@color/colorAccent"
                    />
        </LinearLayout>

</LinearLayout>

